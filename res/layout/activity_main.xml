<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#c3eafe"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/maintopbg"
        android:orientation="horizontal" >

        <ImageView
            android1:id="@+id/imageView1"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android1:src="@drawable/logo" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal" >

            <ImageView
                android1:id="@+id/imageView_title"
                android1:layout_width="wrap_content"
                android1:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:paddingLeft="110dp"
                android1:src="@drawable/maintitle" />
        </LinearLayout>
        
        <LinearLayout
             android1:id="@+id/ll_denglu"
            android1:layout_width="100dp"
            android1:layout_height="80dp"
             >
                    <ImageView
            android1:id="@+id/imageView2"
            android1:layout_width="100dp"
            android1:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="25dp"
            android1:src="@drawable/denglu1" />
        </LinearLayout>

        
          <ImageView
              android1:id="@+id/imageView3"
              android1:layout_width="match_parent"
              android1:layout_height="wrap_content"
              android:layout_marginLeft="5dp"
              android:layout_marginTop="25dp"
              android1:src="@drawable/gengxin" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >
    </LinearLayout>






    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnSchedule"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_gravity="left"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/schedule"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="30dp" />

        <Button
            android1:id="@+id/btnLearningFile"
            android1:layout_width="200dp"
            android1:layout_height="100dp"
            android1:background="@drawable/learningfile"
            android:layout_marginLeft="30dp"
            android1:textColor="#FFFFFF"
            android1:textSize="30dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnLessonResource"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_gravity="left"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/lessonres"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="30dp" />

        <Button
            android:id="@+id/btnPersonFile"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_gravity="left"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/studyrecord"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="30dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnStudyRecord"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_gravity="left"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/homework"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="30dp" />

        <Button
            android:id="@+id/btnCommunicate"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_gravity="left"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/moreapp"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="30dp" />
    </LinearLayout>

    
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android1:id="@+id/imageView_chat"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:layout_marginTop="150dp"
            android1:src="@drawable/mainchart1" />

    </LinearLayout>

</LinearLayout>