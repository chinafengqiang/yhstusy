<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tv_comment_reply_writer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="10sp"
        android:text="作者："
        android:textColor="@color/grey"
        android:layout_marginTop="10dp"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_comment_reply_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="这里是作者给的回复"
        android:layout_toRightOf="@id/tv_comment_reply_writer"
        android:textColor="@color/grey"
        android:layout_marginTop="10dp"
        android:textSize="18sp" />
	<RelativeLayout 
	      android:layout_width="match_parent"
    	  android:layout_height="match_parent"
    	  android:layout_marginLeft="30dp"
    	  android:layout_below="@id/tv_comment_reply_text"
	    >
           <ImageView
                  android:id="@+id/replyImageView"
                  android:layout_marginTop="5dp"
			      android:layout_width="150dp"
			      android:layout_height="150dp"
			      android:visibility="gone"
			      android:src="@drawable/chat_bg_default"
                />
           <TextView 
               android:id="@+id/replyTime"
               android:layout_width="wrap_content"
			   android:layout_height="wrap_content"
			   android:text="2015-06-17 12:00:00"
			   android:layout_marginTop="10dp"
			   android:textColor="@color/grey"
			   android:textSize="18sp"
			   android:layout_below="@id/replyImageView"
               />
	</RelativeLayout>
</RelativeLayout>