<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_touch"
        android:orientation="vertical"
        android:padding="0dp" >

         <TextView
             	android:layout_marginLeft="25dp"
             	android:layout_width="fill_parent"
        		android:layout_height="wrap_content"
                android:id="@+id/selectName"
                android:textColor="#444444"
                android:textSize="18sp"
                android:text="" />
         
           <TextView
             	android:layout_marginLeft="20dp"
             	android:layout_width="fill_parent"
        		android:layout_height="wrap_content"
                android:id="@+id/radioId"
                android:textColor="#444444"
                android:textSize="18sp"
                 />
          
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >

                <com.example.scaletest.ScaleView.ScaleView
		        android:id="@+id/inform_unread_img"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"/>
		  </LinearLayout>   
		   
           <RadioGroup
                android:id="@+id/group1"
                android:layout_marginTop="50dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="horizontal" >

                 
                <RadioButton
                    android:layout_marginLeft="40dp"
                    android:id="@+id/radio1_1"
                    style="@style/style1" 
                    android:textColor="#444444"
                    />

                <RadioButton
                    android:layout_marginLeft="10dp"
                    android:id="@+id/radio1_2"
                    style="@style/style2"
                    android:textColor="#444444"
                    />

                <RadioButton
                    android:layout_marginLeft="10dp"
                    android:id="@+id/radio1_3"
                    style="@style/style3"
                    android:textColor="#444444"
                     />
                 <RadioButton
                    android:layout_marginLeft="10dp"
                    android:id="@+id/radio1_4"
                    style="@style/style4"
                    android:textColor="#444444"
                    />
            </RadioGroup>
            
          <LinearLayout
             android:id="@+id/optionCheckeBox"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="50dp"
             android:visibility="gone"
             android:orientation="horizontal" >

             <CheckBox
		        android:id="@+id/item_cb_1"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginRight="5dip"
		        android:text="A"
		        android:textSize="18sp"
		        android:textColor="#444444"
		        /> 
		        
             <CheckBox
		        android:id="@+id/item_cb_2"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginRight="5dip"
		        android:text="B"
		        android:textSize="18sp"
		        android:textColor="#444444"
		        /> 
		        
             <CheckBox
		        android:id="@+id/item_cb_3"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginRight="5dip"
		        android:text="C"
		        android:textSize="18sp"
		        android:textColor="#444444"
		        /> 
		        
             <CheckBox
		        android:id="@+id/item_cb_4"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginRight="5dip"
		        android:text="D"
		        android:textSize="18sp"
		        android:textColor="#444444"
		        />
             
		  </LinearLayout> 
		  
                  <RadioGroup
                android:id="@+id/group2"
                android:layout_marginTop="50dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="horizontal" >

                 
                <RadioButton
                    android:layout_marginLeft="40dp"
                    android:id="@+id/jradio1_1"
                    style="@style/style5" 
                    android:textColor="#444444"
                    />

                <RadioButton
                    android:layout_marginLeft="10dp"
                    android:id="@+id/jradio1_2"
                    style="@style/style6"
                    android:textColor="#444444"
                    />

            </RadioGroup>
        </LinearLayout>

</LinearLayout>